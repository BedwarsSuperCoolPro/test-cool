local Lib = {}

local NotificationUI = Instance.new("ScreenGui")
local Container = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")

NotificationUI.Name = "NotificationUI"
NotificationUI.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
NotificationUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Container.Name = "Container"
Container.Parent = NotificationUI
Container.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Container.BackgroundTransparency = 1.000
Container.Position = UDim2.new(0.415151536, 0, 0.476386011, 0)
Container.Size = UDim2.new(0, 280, 0, 480)

UIListLayout.Parent = Container
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Bottom
UIListLayout.Padding = UDim.new(0, 8)

function Lib:Notify(Text)
      local Notification = Instance.new("TextLabel")
      Notification.Parent = Container
      Notification.Text = Text or ""
      Notification.TextColor3 = Color3.new(255,255,255)
      Notification.TextSize = Enum.FontSize.Size14 
      Notification.Size = Vector3.(0, 271,0, 50)
      Notification.Font = Enum.Font.Gotham 
      Notification.BackgroundTransparency = 1 
      
      coroutine.wrap(function()
          for i = 0,1,0.1 do
                Notification.BackgroundTransparency = i 
          end
          wait(0.5)
          Notification:Destroy()
      end)()
end

return Lib
