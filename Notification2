local NotificationUI = Instance.new("ScreenGui")
local NotificationContainer = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")
local Template = Instance.new("TextLabel")

NotificationUI.Name = "NotificationUI"
NotificationUI.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
NotificationUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

NotificationContainer.Name = "NotificationContainer"
NotificationContainer.Parent = NotificationUI
NotificationContainer.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
NotificationContainer.Position = UDim2.new(0.41968751, 0, 0, 0)
NotificationContainer.Size = UDim2.new(0, 308, 0, 377)
NotificationContainer.BackgroundTransparency = 1

UIListLayout.Parent = NotificationContainer
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0, 1)

Template.Name = "Template"
Template.Parent = NotificationUI
Template.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Template.BackgroundTransparency = 1.000
Template.Position = UDim2.new(0.175324664, 0, 0, 0)
Template.Size = UDim2.new(0, 325, 0, 43)
Template.ZIndex = 5
Template.Font = Enum.Font.Gotham
Template.Text = "Text"
Template.TextColor3 = Color3.fromRGB(255, 255, 255)
Template.TextSize = 16
Template.TextStrokeColor3 = Color3.fromRGB(35, 35, 35)
Template.TextTransparency = 1
Template.TextWrapped = true

local Lib = {}

function Lib:SendNotification(Text, Duration)
    local Notification = Template:Clone()
    local TweenService = game:GetService("TweenService")
    Notification.Text = Text or "Notification"
    Notification.Parent = NotificationContainer

    TweenService:Create(Notification, TweenInfo.new(.3), {TextTransparency = 0}):Play()
    TweenService:Create(Notification, TweenInfo.new(.3), {TextStrokeTransparency = 0.6}):Play()

    spawn(function()
        task.wait(Duration)
        TweenService:Create(Notification, TweenInfo.new(.3), {TextTransparency = 1}):Play()
        TweenService:Create(Notification, TweenInfo.new(.3), {TextStrokeTransparency = 1}):Play()
        wait(0.58)
        Notification:Destroy()
    end)
end

return Lib
