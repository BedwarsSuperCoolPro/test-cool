local NotificationUI = Instance.new("ScreenGui")
local Container = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")
local Template = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")
local UITextSizeConstraint = Instance.new("UITextSizeConstraint")

NotificationUI.Name = "NotificationUI"
NotificationUI.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
NotificationUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Container.Name = "Container"
Container.Parent = NotificationUI
Container.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Container.BackgroundTransparency = 1.000
Container.Position = UDim2.new(0.42029357, 0, 0.0205338802, 0)
Container.Size = UDim2.new(0, 305, 0, 495)

UIListLayout.Parent = Container
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0, 5)

Template.Name = "Template"
Template.Parent = NotificationUI
Template.BackgroundColor3 = Color3.fromRGB(44, 44, 44)
Template.BackgroundTransparency = 1
Template.BorderSizePixel = 0
Template.Position = UDim2.new(-0.0852458999, 0, 0, 0)
Template.Size = UDim2.new(0, 357, 0, 47)
Template.Visible = false

TextLabel.Parent = Template
TextLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.BackgroundTransparency = 1.000
TextLabel.Size = UDim2.new(0, 357, 0, 47)
TextLabel.Font = Enum.Font.Gotham
TextLabel.Text = "This is a really cool notification"
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TextLabel.TextScaled = true
TextLabel.TextSize = 14.000
TextLabel.TextWrapped = true

UITextSizeConstraint.Parent = TextLabel
UITextSizeConstraint.MaxTextSize = 14

local Lib = {}

function Lib:Notify(Text, Duration)
    local Notification = Template:Clone()
    Notification.TextLabel.Text = Text 
    Notification.Visible = true 
    Notification.Parent = Container 
      
    local TweenService = game:GetService("TweenService")
    TweenService:Create(Notification.TextLabel, TweenInfo.new(0.3), {TextTransparency = 0}):Play()
    TweenService:Create(Notification, TweenInfo.new(0.3), {BackgroundTransparency = 0.45}):Play()

    spawn(function()
        task.wait(Duration)
        TweenService:Create(Notification.TextLabel, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
        TweenService:Create(Notification, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
        wait(0.48)
        Notification:Destroy()
    end)
end

return Lib 
